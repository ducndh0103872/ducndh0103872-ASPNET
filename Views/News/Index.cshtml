@{
    ViewData["Title"] = "Tin Tức";
}

<!-- Hero Section -->
<section class="hero-section bg-primary text-white py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Tin Tức & Xu Hướng</h1>
                <p class="lead">Cập nhật những xu hướng thời trang giày mới nhất</p>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-newspaper" style="font-size: 8rem; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</section>

<!-- News Content -->
<section class="py-5">
    <div class="container">
        <!-- Featured News -->
        <div class="row mb-5">
            <div class="col-12">
                <h2 class="fw-bold mb-4">Tin Nổi Bật</h2>
                <div class="card border-0 shadow-sm">
                    <div class="row g-0">
                        <div class="col-md-6">
                            <div class="news-image bg-primary d-flex align-items-center justify-content-center" style="height: 300px;">
                                <i class="fas fa-image text-white" style="font-size: 4rem; opacity: 0.5;"></i>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card-body p-4">
                                <span class="badge bg-primary mb-2">Xu Hướng</span>
                                <h3 class="card-title fw-bold">Xu Hướng Giày Thể Thao 2025: Những Mẫu Không Thể Bỏ Qua</h3>
                                <p class="card-text text-muted">Khám phá những xu hướng giày thể thao hot nhất năm 2025 với những thiết kế độc đáo và công nghệ tiên tiến từ các thương hiệu hàng đầu thế giới.</p>
                                <div class="d-flex align-items-center mb-3">
                                    <small class="text-muted">
                                        <i class="fas fa-calendar me-1"></i> 15/07/2025
                                        <i class="fas fa-user ms-3 me-1"></i> Admin
                                        <i class="fas fa-eye ms-3 me-1"></i> 1,234 lượt xem
                                    </small>
                                </div>
                                <a href="@Url.Action("Details", "News", new { id = 1 })" class="btn btn-primary">Đọc Thêm</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- News Grid -->
        <div class="row">
            <div class="col-lg-8">
                <h3 class="fw-bold mb-4">Tin Tức Mới Nhất</h3>
                <div class="row g-4">
                    <!-- News Item 1 -->
                    <div class="col-md-6">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="news-image bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-image text-white" style="font-size: 3rem; opacity: 0.5;"></i>
                            </div>
                            <div class="card-body">
                                <span class="badge bg-success mb-2">Khuyến Mãi</span>
                                <h5 class="card-title">Sale Cuối Năm - Giảm Giá Lên Đến 50%</h5>
                                <p class="card-text text-muted">Chương trình khuyến mãi lớn nhất trong năm với hàng ngàn sản phẩm giày từ các thương hiệu nổi tiếng.</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        <i class="fas fa-calendar me-1"></i> 14/07/2025
                                    </small>
                                    <a href="@Url.Action("Details", "News", new { id = 2 })" class="btn btn-outline-primary btn-sm">Xem Chi Tiết</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- News Item 2 -->
                    <div class="col-md-6">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="news-image bg-warning d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-image text-white" style="font-size: 3rem; opacity: 0.5;"></i>
                            </div>
                            <div class="card-body">
                                <span class="badge bg-info mb-2">Sản Phẩm Mới</span>
                                <h5 class="card-title">Ra Mắt Bộ Sưu Tập Nike Air Max 2025</h5>
                                <p class="card-text text-muted">Nike chính thức ra mắt bộ sưu tập Air Max 2025 với công nghệ đệm khí tiên tiến nhất.</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        <i class="fas fa-calendar me-1"></i> 13/07/2025
                                    </small>
                                    <a href="@Url.Action("Details", "News", new { id = 3 })" class="btn btn-outline-primary btn-sm">Xem Chi Tiết</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- News Item 3 -->
                    <div class="col-md-6">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="news-image bg-danger d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-image text-white" style="font-size: 3rem; opacity: 0.5;"></i>
                            </div>
                            <div class="card-body">
                                <span class="badge bg-warning mb-2">Hướng Dẫn</span>
                                <h5 class="card-title">Cách Chọn Size Giày Phù Hợp</h5>
                                <p class="card-text text-muted">Hướng dẫn chi tiết cách đo chân và chọn size giày phù hợp để có trải nghiệm tốt nhất.</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        <i class="fas fa-calendar me-1"></i> 12/07/2025
                                    </small>
                                    <a href="@Url.Action("Details", "News", new { id = 4 })" class="btn btn-outline-primary btn-sm">Xem Chi Tiết</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- News Item 4 -->
                    <div class="col-md-6">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="news-image bg-success d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-image text-white" style="font-size: 3rem; opacity: 0.5;"></i>
                            </div>
                            <div class="card-body">
                                <span class="badge bg-secondary mb-2">Bảo Quản</span>
                                <h5 class="card-title">Bí Quyết Bảo Quản Giày Luôn Như Mới</h5>
                                <p class="card-text text-muted">Những mẹo hay để bảo quản giày, giúp giày luôn bền đẹp và tăng tuổi thọ sử dụng.</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        <i class="fas fa-calendar me-1"></i> 11/07/2025
                                    </small>
                                    <a href="@Url.Action("Details", "News", new { id = 5 })" class="btn btn-outline-primary btn-sm">Xem Chi Tiết</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Pagination -->
                <nav aria-label="News pagination" class="mt-5">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Trước</a>
                        </li>
                        <li class="page-item active">
                            <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">Sau</a>
                        </li>
                    </ul>
                </nav>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="sticky-top" style="top: 2rem;">
                    <!-- Search -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">Tìm Kiếm Tin Tức</h5>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Nhập từ khóa...">
                                <button class="btn btn-primary" type="button">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Categories -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">Danh Mục Tin Tức</h5>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <a href="#" class="text-decoration-none">
                                        <i class="fas fa-chevron-right text-primary me-2"></i>Xu Hướng Thời Trang
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a href="#" class="text-decoration-none">
                                        <i class="fas fa-chevron-right text-primary me-2"></i>Khuyến Mãi
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a href="#" class="text-decoration-none">
                                        <i class="fas fa-chevron-right text-primary me-2"></i>Sản Phẩm Mới
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a href="#" class="text-decoration-none">
                                        <i class="fas fa-chevron-right text-primary me-2"></i>Hướng Dẫn
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a href="#" class="text-decoration-none">
                                        <i class="fas fa-chevron-right text-primary me-2"></i>Bảo Quản
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Popular Posts -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">Tin Phổ Biến</h5>
                            <div class="popular-post mb-3">
                                <h6 class="mb-1">
                                    <a href="#" class="text-decoration-none">Top 10 Giày Thể Thao Bán Chạy Nhất 2025</a>
                                </h6>
                                <small class="text-muted">2,345 lượt xem</small>
                            </div>
                            <div class="popular-post mb-3">
                                <h6 class="mb-1">
                                    <a href="#" class="text-decoration-none">Cách Phối Đồ Với Giày Sneaker</a>
                                </h6>
                                <small class="text-muted">1,876 lượt xem</small>
                            </div>
                            <div class="popular-post">
                                <h6 class="mb-1">
                                    <a href="#" class="text-decoration-none">Review Chi Tiết Nike Air Force 1</a>
                                </h6>
                                <small class="text-muted">1,654 lượt xem</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
